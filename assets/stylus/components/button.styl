.button
  align-items center
  display flex
  letter-spacing $unitH * 4
  font-size 8px
  line-height 1
  font-weight $semi
  justify-content center
  left 50%
  position absolute
  text-transform uppercase
  pointer-events auto
  transition opacity .5s ease-in-out-quad
  padding-top 10px
  padding-bottom 10px
  overflow hidden
  will-change opacity
  &:hover
    opacity 0.6
  .word
    position relative
    height 7px
    margin 0 20 * $unitH
  &.black
    color $colors-black
    &:before,
    &:after
      background $colors-black
  &.white
    color $colors-white
    &:before,
    &:after
      background $colors-white
  &:before,
  &:after
    content ''
    display block
    height 1px
    width $unitV * 40
  &.top
    top 0
    transform translate(14px, 0%) rotate(90deg)
    transform-origin 0% 0%
    &:before
      width $unitV * 80
      margin-left 0
  &.bottom
    bottom 0
    transform rotate(-90deg) translate(0%, 50%)
    transform-origin 0% 100%
    &:before
      width $unitV * 80
      margin-left 0
